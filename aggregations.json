[
  {
    "$group": {
      "_id": "$genre",
      "avgPrice": { "$avg": "$price" }
    }
  },
  {
    "$sort": { "avgPrice": -1 }
  }
]
[
  {
    "$group": {
      "_id": "$author",
      "totalBooks": { "$sum": 1 }
    }
  },
  {
    "$sort": { "totalBooks": -1 }
  },
  {
    "$limit": 1
  }
]
[
  {
    "$group": {
      "_id": {
        "$multiply": [
          { "$floor": { "$divide": ["$published_year", 10] } },
          10
        ]
      },
      "count": { "$sum": 1 }
    }
  },
  {
    "$sort": { "_id": 1 }
  }
]

[
  {
    "$group": {
      "_id": null,
      "totalRevenue": { "$sum": { "$multiply": ["$price", "$copies_sold"] } }
    }
  }
]